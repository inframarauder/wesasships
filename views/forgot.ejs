<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <!--jQuery and Bootstrap JS-->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <title>Wesasships|Password Reset</title>
        <link rel="stylesheet" href="../assets/styles/index-styles.css">
        <link rel="shortcut icon" type="image/.jpeg" href="../assets/images/icons/Logo.jpeg">
        <style>
            .pass-rest-area{
                min-height: 60vh;
                max-width: 80vh;
                margin-left: 25%;
                margin-right: 25%;
                font-size:1.2rem;
            }
        </style>
    </head>
    <% include partials/google.ejs %>

    <body>
        <nav class="navbar navbar-expand-sm navbar-light ">
            <a href="/" class="navbar-brand ml-2"><img id='title-img' src="../assets/images/icons/title_logo.jpeg"></a>
        </nav>
        <div class="container pass-rest-area ">
           <% if(messages) {%>
             <% if(messages.errorMessage) {%>
                <div class="alert alert-danger">
                    <p><%= messages.errorMessage %></p>
                </div>
           <%  } %>
           <% if(messages.successMessage) {%>
            <div class="alert alert-success">
                <p><%= messages.successMessage %></p>
            </div>
         <%  } %>
    <%   } %>
            <p>
            <legend>Reset Password.</legend><br>
                Please enter your email below. We will send a password reset link to your email.
            </p>
            <form method="POST" action="/<%= root %>/forgot"> 
                <input class="form-control" type="text" name="username" placeholder="Enter your registered email"><br>
                <button class="btn btn-primary" type="submit">Send Password Reset Link </button>                
            </form>
        </div>
        
        <% include partials/footer.ejs %>
      
    </body>
</html>